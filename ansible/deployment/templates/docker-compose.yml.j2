---
version: '3.8'

services:
  frontend:
    image: lmdev09/cicd-todo-fe:latest
    ports:
      - "${FRONTEND_PORT}:3000"
    environment:
      - NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_SERVER_URL}
    depends_on:
      - backend
    restart: unless-stopped

  backend:
    image: lmdev09/cicd-todo-be:latest
    ports:
      - "${BACKEND_PORT}:5000"
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - PORT=${BACKEND_PORT}
    restart: unless-stopped
